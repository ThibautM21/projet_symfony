{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}
	<div class="d-flex align-items-center">
		<h1 class="my-4">Article index</h1>
		{% if is_granted('ROLE_ADMIN') %}
			<a class="btn btn-primary btn-sm ml-auto" href="{{ path('article_new') }}">Create new</a>
		{% endif %}
	</div>
	<table class="table table-sm table-striped text-center">
		<thead>
			<tr>
				<th>ID</th>
				<th>Title</th>
				<th>Content</th>
				<th>Creation date</th>
				<th>Last modification date</th>
				{% if is_granted('ROLE_ADMIN') %}
					<th>Actions</th>
				{% endif %}
			</tr>
		</thead>
	</tr>
</thead>
<tbody>
	{% for article in articles %}
		<tr>
			<td>{{ article.id }}</td>
			<td>
				<a class="text-primary font-weight-bold" href="{{ path('article_show', {'id': article.id}) }}">{{ article.title }}</a>
			</td>
			<td>{{ article.content| striptags | slice(0,50)  ~ '...'}}</td>
			<td>{{ article.createdAt ? article.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			<td>{{ article.updatedAt ? article.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
			{% if is_granted('ROLE_ADMIN') %}
				<td class="d-flex align-items-center">
					{{ include('article/_delete_form.html.twig') }}
					<a class="btn btn-warning btn-sm" href="{{ path('article_edit', {'id': article.id}) }}">Edit</a>
				</td>
			{% endif %}
		</tr>
	{% else %}
		<tr>
			<td colspan="6">No records found</td>
		</tr>
	{% endfor %}
</tbody></tbody></table><div class="text-center">{% if previous >= 0 %}
<a class="btn btn-primary btn-sm" href="{{ path('article_index', {offset: previous }) }}">Previous</a>{% endif %}{% if next < articles|length %}
<a class="btn btn-success btn-sm" href="{{ path('article_index', {offset: next }) }}">Next</a>{% endif %}</div>{% endblock %}
